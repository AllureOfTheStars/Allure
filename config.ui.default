; Tab: MemberCycle
; ISO_Left_Tab: MemberBack
; I: Inventory
; equal: SelectActor
; underscore: SelectNone
; space: Clear
; p: Repeat 1
; P: Repeat 100
; CTRL-p: Repeat 1000
; apostrophe: Record
; D: History
; V: MarkVision
; S: MarkSmell
; T: MarkSuspect
; question: Help

; slash: TgtFloor
; asterisk: TgtEnemy
; CTRL-question: TgtUnknown
; CTRL-i: TgtItem
; CTRL-less: TgtStair True
; CTRL-greater: TgtStair False
; bracketleft:  TgtAscend 1
; bracketright: TgtAscend (-1)
; braceleft:    TgtAscend 10
; braceright:   TgtAscend (-10)
; plus: EpsIncr True
; minus: EpsIncr False
; BackSpace: TgtClear
; Escape: Cancel
; Return: Accept

